<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="177dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_dark_blue_faded">

        <ImageView
            android:id="@+id/item_list_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/item_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/comfortaa_bold"
            android:textSize="17sp"
            android:textColor="@color/txt_color_white"
            android:text="TextView"/>

        <TextView
            android:id="@+id/item_list_descritption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/comfortaa"
            android:textSize="15sp"
            android:textColor="@color/txt_color_white_faded"
            android:text="TextView"/>

        <TextView
            android:id="@+id/item_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/comfortaa_bold"
            android:textSize="17sp"
            android:textColor="@color/txt_color_white"
            android:text="TextView"/>

        <Button
            android:id="@+id/cardview_button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_item_button"
            android:fontFamily="@font/comfortaa_bold"
            android:text="ADD TO CART"
            android:textColor="@color/bg_dark_blue"
            android:textSize="15sp" />

    </LinearLayout>
    
</androidx.cardview.widget.CardView>